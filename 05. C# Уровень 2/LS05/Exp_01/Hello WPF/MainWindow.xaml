<Window x:Class="Hello_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        xmlns:local="clr-namespace:Hello_WPF"
        mc:Ignorable="d"
        Title="QuoteApp" Height="450" Width="800">

    <Window.Resources>
        <sys:String x:Key="strHelloWPF">HelloWPF</sys:String>
    </Window.Resources>
        
    <Grid Name="MainGrid" 
          HorizontalAlignment="Right" Width="800"
          Background="LightBlue">
        <TextBlock  x:Name="textBlock"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="Hello WPF" FontSize="36" Margin="32,32,0,0" />
        <Button x:Name="FirstButton" Content="Кнопка" 
                Margin="28,96,599,240"
                FontSize="40" FontWeight="Bold" Click="FirstButton_Click"/>

        <StackPanel Margin="421,122,30,30">
            <TextBlock Text="{StaticResource strHelloWPF}" FontSize="56"/>
            <TextBlock>Еще раз <TextBlock Text="{StaticResource ResourceKey=strHelloWPF}"/>, но из ресурсов</TextBlock>
        </StackPanel>

    </Grid>
    
</Window>